{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "petinfo": {
      "id": "/petinfos",
      "title": "Petinfo",
      "description": "An pet information in the blog",
      "type": "object",
      "properties": {
        "petname": {
          "description": "Pet name of the blog petinfo",
          "type": "string"
        },
        "petsummary": {
          "description": "Simple description of the pet",
          "type": "string"
        },
        "imageurl": {
          "description": "URL for main image to show the pet ",
          "type": "uri"
        },
        "authorid": {
          "description": "User ID of the pet record author",
          "type": "integer",
          "minimum": 0
        },
        "description": {
          "description": "detail description for the pet",
          "type": "string"  
        }        
      },
      "required": ["petname", "petsummary", "authorid"]
    }
  }
}
